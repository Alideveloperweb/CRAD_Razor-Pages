@page
@model TamrinRaz.Pages.BookList.EditModel
@{
}


<br />
<h2 class="text-info">Edit Book '@Model.Book.Name'</h2>
<hr />
<div class="border container" style="padding: 30px">
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />

        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" />
         
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right" style="padding:4px;">
                <label asp-for="Book.Author"></label>

            </div>
            <div class="col-6">
                <input asp-for="Book.Author" />
  
            </div>
        </div>

        <div class="form-group row" style="padding:4px;">
            <div class="col-4 text-right">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
            </div>
            <div class="col-6">
                <input type="submit" value="Update" class="btn btn-outline-primary" />
                <a class="btn btn-link" asp-page="Index">Back To List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
